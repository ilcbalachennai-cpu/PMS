{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "../dist-electron",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts"
    ]
}